/* pages/myCouponDetail/components/couponDetailItem/index.wxss */
.coupone-item{
  width:100%;
  padding:40rpx 24rpx 40rpx 0rpx;
  border-radius: 16rpx;
  height:200rpx;
  /* border: 2rpx solid #FAC2C4; */
  box-sizing: border-box;
  /* background-color: #FFF0F0; */
  background: url("http://img1.bitauto.com/das/chehou_sass/sass_wx/coupon/coupon-detail-active-bkg.png") no-repeat center center;
  background-size:100% 100%;
  color: #F5222D;
  position: relative;
  display:flex;
  justify-content: flex-start;
  align-items:center;
  flex-wrap: nowrap;
  overflow:hidden;
}
.fs20{
  font-size:40rpx !important;
}
.fs32{
  font-size:64rpx !important;
}
.unactive{
  /* border: 2rpx solid #CCC8C4; */
