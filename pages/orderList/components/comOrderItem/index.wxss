/* components/comOrderItem/index.wxss */
.order-item{
  width:100%;
  padding:0rpx 24rpx 0rpx 24rpx;
  box-sizing: border-box;
  /* height:420rpx; */
  background: #FFFFFF;
  border-radius: 8rpx;
  margin-bottom:24rpx;
}
/* .order-item:last-of-type{
  margin-bottom:0rpx;
} */
/* head height:80rpx*/
.order-item-head{
width:100%;
padding:22rpx 0rpx 24rpx;
border-bottom:2rpx solid #F5F3F2;
background: #FFFFFF;
display:flex;
justify-content: space-between;
align-items: center;
box-sizing: border-box;
}
.item-head-title{
  /* width:426rpx; */
width:calc(100% - 230rpx);
font-size: 24rpx;
font-family: PingFangSC-Regular, PingFang SC;
font-weight: 400;
color: #A3A09D;
/* display:flex;
justify-content: flex-start;
align-items: center; */
box-sizing: border-box;
overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.item-head-status{
/* flex:1; */
/* width:230rpx; */
width:calc(100%-426rpx);
display:flex;
justify-content: flex-end;
align-items: center;
font-size: 24rpx;
font-family: 'PingFangSC-Bold, PingFang SC';
font-weight: bold;
color: #A3A09D;
}
.item-head-service{
  color: #52C41A;
}
.item-head-pay{
  color: #FF8833;
}
/* main height:242rpx*/
.order-item-main{
width:100%;
padding:24rpx 0rpx 24rpx 0rpx;
border-bottom:2rpx solid #F5F3F2;
display: flex;
justify-content: flex-start;
align-items:center;
box-sizing: border-box;
}
.item-main-img{
  width:192rpx;
  height:192rpx;
  background:#eee;
  margin-right:16rpx;
  border-radius: 16rpx;
}
.item-main-desc{
  /* flex:1; */
  width:calc(100% - 208rpx);
/* width:100%; */
padding-top:8rpx;
}
.item-main-title{
  width:100%;
  font-size: 28rpx;
  font-family: 'PingFangSC-Bold, PingFang SC';
  font-weight: 400;
  color: #292522;
  line-height: 44rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-bottom:12rpx;
}
.item-main-label-box{
  width:100%;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A3A09D;
  line-height: 34rpx;
  display:flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom:6rpx;
}
.item-main-label-box-desc{
  margin-right:10rpx;
}
.item-main-label-box-size{
text-align:left;
}
.item-num{
  width:100%;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A3A09D;
  line-height: 34rpx;
  margin-bottom:18rpx;
}
.item-main-price{
width:100%;
font-size: 24rpx;
font-family: 'PingFangSC-Bold, PingFang SC';
font-weight: 400;
color: #292522;
}
.item-main-price-num-int{
  font-size: 36rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
  color: #292522;
}
.item-main-price-num-float{
  font-size: 24rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
  color: #292522;
}
.price-share{
  color: #FF8833;
}
.price-pay{
  font-weight: bold;
}
.price-share-num{
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
}
/* footer height:98rpx*/
.order-item-footer{
  width:100%;
  height:98rpx;
  display:flex;
  justify-content: flex-end;
  align-items:center;
}
.order-item-btn{
  width: 164rpx;
  height: 64rpx;
  border-radius: 32rpx;
  border: 2rpx solid #FF8833;
  display:flex;
  justify-content: center;
  align-items:center;
  font-size: 24rpx;
  font-family: 'PingFangSC-Bold, PingFang SC';
  font-weight: bold;
  color: #FF8833;
}