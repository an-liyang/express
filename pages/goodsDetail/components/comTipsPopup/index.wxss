/* components/comConfirmPopup/index.wxss */
.confim-dialog{
  width: 560rpx;
  height: 256rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background: #FFFFFF;
  border-radius: 8rpx;
  text-align: center;
  overflow: hidden;
}
.confim-dialog-message{
  height: 166rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}
.confim-dialog-message .text{
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #292522;
  line-height: 48rpx;
  letter-spacing: 2rpx;
}
.confim-dialog-footer{
  border-top: 2rpx solid #E7E3DC;
  height: 88rpx;
  display: flex;
}
.confim-dialog-btn{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #FF7700;
  letter-spacing: 2rpx;
}
