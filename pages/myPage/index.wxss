/* pages/myPage/index.wxss */
.my-box{
  width:100%;
  height:100vh;
  box-sizing: border-box;
  position:relative;
  background: #F7F7F9;
  box-sizing: border-box;
}
.my-box-inner{
  width:100%;
  padding:0rpx 24rpx 0rpx 24rpx;
  box-sizing: border-box;
}
.arrow{
  width:16rpx;
  height:24rpx;
  display:inline-block;
}
.mgl8{
  margin-left:8rpx;
}
.mgl16{
  margin-left:16rpx;
}
/* 登录 */
.login-info{
  width:100%;
  display:flex;
  padding:24rpx 16rpx 40rpx 16rpx;
  box-sizing: border-box;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
}
.login-btn{
  display:flex;
  justify-content: center;
  align-items:center;
  width:168rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 2rpx solid #FF7D08;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FF7C06;
  box-sizing: border-box;
}
.left-box{
  width:74%;
  display:flex;
  justify-content: flex-start;
  align-items:center;
}
.left-user-img{
  flex:0 0 112rpx;
  height:112rpx;
  border-radius: 50%;
  margin-right:24rpx;
}
.right-user-info{
  flex:1;
}
.unlogin{
  display:flex;
  justify-content: space-between;
  align-items:center;
}
.login-status{
  font-size: 36rpx;
  font-family: PingFangSC-Bold, PingFang SC;
  font-weight: bold;
  color: #292522;
  text-align:left;
}
.login-user{
  width:100%;
  font-size: 36rpx;
  font-family: PingFangSC-Bold, PingFang SC;
  font-weight: bold;
  color: #292522;
  line-height: 50rx;
  text-align:left;
}
.login-phone{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #5D5A58;
  line-height: 40rpx;
  text-align:left;
}
/* 订单 */
.order-info{
  height: 226rpx;
  padding:26rpx 0rpx 28rpx 0rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 24rpx 0rpx rgba(41, 37, 34, 0.02);
  border-radius: 16rpx;
  box-sizing: border-box;
  margin-bottom:24rpx;
}
.order-head{
width:100%;
padding:0rpx 24rpx 0rpx 24rpx;
box-sizing: border-box;
display:flex;
justify-content: space-between;
align-items:center;
}
.order-title{
  font-size: 32rpx;
  font-family: PingFangSC-Bold, PingFang SC;
  font-weight: bold;
  color: #292522;
  line-height: 44rpx;
}
.order-total{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A3A09D;
  line-height: 34rpx;
  display:flex;
  align-items: center;
  justify-content: flex-start;
}
.order-main{
  width:100%;
  padding:26rpx 50rpx 0rpx 50rpx;
  box-sizing: border-box;
  display:flex;
  justify-content: space-between;
  align-items:center;
}
.order-item{
  width:100%;
  position:relative;
  display:flex;
  flex-direction: column;
  align-items:center;
  /* justify-content: center; */
}
.num-icon{
  /* width:32prx; */
  min-width:28rpx;
  height: 28rpx;
  line-height: 24rpx;
  text-align:center;
  position: absolute;
  top:0rpx;
  right:40rpx;
  display:inline-block;
  background: #FF4400;
  border-radius: 24rpx;
  border: 2rpx solid #FFFFFF;
  padding:0 6rpx;
  box-sizing: border-box;
  font-size: 16rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}
.order-item-img{
  width:64rpx;
  height:64rpx;
  margin-bottom:4rpx;
}
.order-item-desc{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #5C5A58;
  line-height: 34rpx;
}
/* 店铺 */
.store-info{
  width:100%;
  height: 274rpx;
  padding:26rpx 24rpx 28rpx 24rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 24rpx 0rpx rgba(41, 37, 34, 0.02);
  border-radius: 16rpx;
  box-sizing: border-box;
  margin-bottom:24rpx;
}
.store-title{
  font-size: 32rpx;
  font-family: PingFangSC-Bold, PingFang SC;
  font-weight: bold;
  color: #292522;
  line-height: 44rpx;
  text-align:left;
  margin-bottom:4rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.store-time{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A3A09D;
  line-height: 34rpx;
  text-align:left;
  margin-bottom:12rpx;
}
.store-label-box{
  width:100%;
  display:flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-bottom:18rpx;
}
.store-label-item{
  /* width: 56rpx; */
  padding: 0 8rpx;
  height: 32rpx;
  background: rgba(51, 102, 255, 0.08);
  border-radius: 4rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #3366FF;
  margin-right:8rpx;
  margin-bottom:8rpx;
}
.store-adress{
  display:flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom:24rpx;
}
.store-adress-img-box{
  flex:0 0 98rpx;
  display:flex;
  justify-content: space-between;
}
.store-adress-info{
  flex:1;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #5C5A58;
  line-height: 34rpx;
  text-align:left;
  padding-right: 40rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  word-wrap:break-word;
  -webkit-box-orient: vertical;
}
.store-adress-img-local{
  width:64rpx;
  height:64rpx;
  margin-right:32rpx;
}
.store-adress-img-phone{
  width:64rpx;
  height:64rpx;
}
