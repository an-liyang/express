/* pages/historyStorePage/index.wxss */
.history-box{
  width:100%;
  min-height: calc(100vh - env(safe-area-inset-bottom));
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
  box-sizing: border-box;
}
.his-content-box{
  width:100%;
  min-height: 100vh;
  background: #F7F7F9;
  padding:0rpx 24rpx 0rpx 24rpx;
  box-sizing: border-box;
}
.no-data-box{
  width:100%;
  min-height: 88vh;
  display:flex;
  justify-content: center;
  align-items: center;
  margin-top:-150rpx;
}
.load-finish{
  width:100%;
  height:72rpx;
  display:flex;
  align-items:center;
  justify-content: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #CCC8C4;
}
.his-item{
  position: relative;
  width:100%;
  /* height: 336rpx; */
  padding:32rpx 24rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 24rpx 0rpx rgba(41, 37, 34, 0.02);
  border-radius: 8rpx;
  margin-bottom:24rpx;
  box-sizing: border-box;
}
.cur-store{
  position: absolute;
  right:0rpx;
  top:0rpx;
  width: 126rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align:center;
  font-size: 24rpx;
  font-family: PingFangSC-Bold, PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  border-radius: 0rpx 8rpx 0rpx 8rpx;
  background-image: linear-gradient(to right,#FFB71A, #FF800B);/* 自右向左 */
}
.item-top{
  width:100%;
  display:flex;
  justify-content: space-between;
  align-items:flex-start;
}
.top-title{
  flex:1;
  font-size: 32rpx;
  font-family: PingFangSC-Bold, PingFang SC;
  font-weight: bold;
  color: #292522;
  line-height: 48rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  word-wrap:break-word;
  -webkit-box-orient: vertical;
}
.switch-store{
  display: flex;
  align-items: center;
  width:120rpx;
  margin-left:40rpx;
}
.switch-txt{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FF800B;
  line-height: 34rpx;
}
.switch-img{
  width: 16rpx;
  height: 24rpx;
  margin-left:8rpx;
}
.time-box{
  margin-top:8rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A3A09D;
  line-height: 36rpx;
}
.time-label{
  margin-right:4rpx;
}
.time-val{

}
.label-box{
  width:100%;
  position: relative;
  margin-top:8rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.label-item{
  padding: 0 8rpx;
  height: 32rpx;
  background: rgba(51, 102, 255, 0.08);
  border-radius: 4rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #3366FF;
  margin-right: 8rpx;
  vertical-align: middle;
}
.address{
  display:flex;
  justify-content: space-between;
  align-items:flex-start;
  margin-top:24rpx;
}
.address-img{
  margin-top:7rpx;
  width:24rpx;
  height:24rpx;
  margin-right:16rpx;
}
.address-info{
  flex:1;
  text-align:left;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #5C5A58;
  line-height: 36rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  word-wrap:break-word;
  -webkit-box-orient: vertical;
}
.phone{
  display:flex;
  justify-content: space-between;
  align-items:flex-start;
  margin-top:8rpx;
}
.phone-info{
  flex:1;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #5C5A58;
  line-height: 36rpx;
  text-align:left;
}
.no-order{
  min-height: 100%;
  display:flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items:center;
  /* background: #F7F7F9; */
}
.no-order-img{
width:228rpx;
height:228rpx;
margin-bottom:18rpx;
}
.no-order-txt{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #292522;
  line-height: 40rpx;
  /* text-shadow: 0rpx 8rpx 24rpx rgba(219, 230, 255, 0.4); */
}
