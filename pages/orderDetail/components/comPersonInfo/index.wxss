/* pages/orderDetail/components/comPersonInfo/index.wxss */
.person-info{
  width:100%;
  /* height: 260rpx; */
  padding:26rpx 24rpx 20rpx 24rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 24rpx 0rpx rgba(41, 37, 34, 0.02);
  border-radius: 8rpx;
  box-sizing: border-box;
}
.person-info-head{
  height: 40rpx;
  font-size: 28rpx;
  font-family: 'PingFangSC-Bold, PingFang SC';
  font-weight: bold;
  color: #292522;
  line-height: 40rpx;
  text-align:left;
  margin-bottom:6rpx;
}
.person-info-main{
  width:100%;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #292522;
}
.person-info-item{
  width:100%;
  line-height: 34rpx;
  margin-top:22rpx;
  display:flex;
  justify-content: space-between;
  align-items:center;
}
.remark-info-item{
  width:100%;
  line-height: 34rpx;
  margin-top:22rpx;
  display:flex;
  justify-content: space-between;
  align-items:flex-start;
}
.person-info-item-key{
text-align:left;
}
.person-info-item-val{
text-align:right;
}
.remark-info-val{
  width:520rpx;
  text-align:right;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #292522;
  line-height: 40rpx;
}