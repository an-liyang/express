/* pages/orderDetail/components/comVerificationCodeInfo/index.wxss */
.verification-code{
  width: 100%;
  padding:26rpx 24rpx 20rpx 24rpx;
  height: 214rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 24rpx 0rpx rgba(41, 37, 34, 0.02);
  border-radius: 8rpx;
  box-sizing: border-box;
  position:relative;
  margin-bottom:24rpx;
  z-index:0;
}
.title{
  font-size: 28rpx;
  font-family: 'PingFangSC-Bold, PingFang SC';
  font-weight: bold;
  color: #292522;
  line-height: 40rpx;
  text-align:left;
  margin-bottom:26rpx;
}
.img{
position: absolute;
right: 24rpx;
top: 16rpx;
width:96rpx;
height:84rpx;
/* background:#eee; */
z-index:-1;
}
.code-box{
width:100%;
display:flex;
justify-content: center;
align-items:center;
margin-bottom:28rpx;
}
.code{
/* flex:1; */
display:inline-block;
font-size: 28rpx;
font-family: 'PingFangSC-Bold, PingFang SC';
font-weight: bold;
color: #292522;
line-height: 40rpx;
text-align:right;
}
.btn{
  /* width:122rpx; */
  display:inline-block;
  padding-left:16rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FF7700;
  line-height: 34rpx;
  text-align:left;
}
.desc{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A3A09D;
  line-height: 34rpx;
}