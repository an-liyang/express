/* pages/myLoveCar/index.wxss */
.my-car{
  background: #F7F7F9;
  /* height: 100vh; */
  min-height: calc(100vh - env(safe-area-inset-bottom));
  overflow-y: auto;
  padding-top: 24rpx;
  box-sizing: border-box;
}
.pb{
  padding-bottom: 112rpx;
}
.my-car-item{
  width: 702rpx;
  height: 258rpx;
  background: #FFFFFF;
  box-shadow: 0px 4rpx 8rpx 0px rgba(41, 37, 34, 0.02);
  border-radius: 8rpx;
  margin: 0 auto;
  margin-bottom: 24rpx;
  padding: 32rpx 24rpx 24rpx 24rpx;
  box-sizing: border-box;
}
.my-car-item-base{
  display: flex;
  justify-content: flex-start;
  position: relative;
}
.my-car-item-base .car-license {
  height: 50rpx;
  margin-bottom: 4rpx;
  display: flex;
}
.my-car-item-base .car-license .text{
  font-size: 36rpx;
  font-family: PingFangSC-Bold, PingFang SC;
  font-weight: bold;
  color: #292522;
  line-height: 50rpx;
}
.my-car-item-base .default-car{
  display: inline-block;
  width: 96rpx;
  height: 32rpx;
  background: linear-gradient(138deg, #FFB71A 0%, #FF800B 100%);
  border-radius: 4rpx;
  text-align: center;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #FFFFFF;
  line-height: 32rpx;
  margin-top: 8rpx;
  margin-left: 8rpx;
}
.my-car-item-base .car-brand{
  width: 550rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #A3A09D;
  line-height: 40rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.my-car-item-base .car-brand-logo{
  width: 80rpx;
  height: 80rpx;
  vertical-align: bottom;
  margin-right: 24rpx;
  margin-top: 8rpx;
}

.my-car-item .line{
  display: block;
  width: 100%;
  height: 2rpx;
  background: #F5F3F2;
  margin-top: 34rpx;
}
.my-car-item-operate{
  padding-top: 32rpx;
  position: relative;
}
.my-car-item-operate .operate-item{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #A3A09D;
}
.my-car-item-operate .operate-left{
  height: 34rpx;
  line-height: 34rpx;
}
.my-car-item-operate .operate-right{
  position: absolute;
  top: 32rpx;
  right: 0;
  display: flex;
  font-size: 24rpx;
  line-height: 32rpx;
}
.my-car-item-operate .operate-icon{
  width: 32rpx;
  height: 32rpx;
  vertical-align: top;
  margin-right: 8rpx;
}

.my-car-null .null-img{
  width: 228rpx;
  height: 228rpx;
  margin: 200rpx auto 0;
}
.my-car-null .null-img image{
  width: 100%;
  height: 100%;
}
.my-car-null .null-tips{
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #292522;
  line-height: 40rpx;
  text-shadow: 0 8rpx 24rpx rgba(219, 230, 255, 0.4);
  text-align: center;
  margin: 18rpx auto 34rpx;
}
.my-car-null .null-btn{
  width: 208rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #FF8833;
  box-shadow: 0 8rpx 24rpx 0 rgba(219, 230, 255, 0.4);
  border-radius: 40rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFangSC-Bold, PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  margin: 0 auto;
}
.my-car-null .reLoad-btn{
  border: 2rpx solid #FF8833;
  box-sizing: border-box;
  background: none;
  color: #FF8833;
}
/* 保存 */
.footer-btn{
  position: fixed;
  background: #fff;
  left: 0;
  bottom: 0;
  width: 100%;
  /* height: 112rpx; */
  /* padding: 14rpx 24rpx 16rpx; */
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
  border-top: 2rpx solid #F5F3F2;
  box-shadow: 0 -4rpx 16rpx 0 rgba(41, 37, 34, 0.02);
  /* box-sizing: border-box; */
}
.footer-btn .btn{
  margin: 14rpx 24rpx 16rpx;
  width: 702rpx;
  height: 80rpx;
  background: #FF800B;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Bold, PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 80rpx;
  text-align: center;
}