/* pages/couponAvailableGoods/index.wxss */
.header{
  width: 100%;
  height: 136rpx;
  background: #FFF0F0;
  padding: 24rpx;
  box-sizing: border-box;
}
.limit-time{
  height: 36rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #5C5A58;
  line-height: 36rpx;
}
.limit-more{
  display: flex;
  margin-top: 8rpx;
}
.name{
  width: 76rpx;
  height: 32rpx;
  background: #F5222D;
  border-radius: 4rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 32rpx;
  text-align: center;
  margin-top: 6rpx;
  margin-right: 16rpx;
}
.limit-money{
  height: 44rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Bold, PingFang SC;
  font-weight: bold;
  color: #F5222D;
  line-height: 44rpx;
}
.content{
  padding: 0 24rpx;
}
.no-goods{
  width: 100%;
  margin-top: 240rpx;
  text-align: center;
}
.no-goods .no-goods-img{
  display: block;
  margin: 0 auto;
  margin-bottom: 9rpx;
  width: 228rpx;
  height: 228rpx;
}
.no-goods .no-goods-text{
  display: block;
  margin: 0 auto;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #292522;
  line-height: 40rpx;
  text-shadow: 0 8rpx 24rpx rgba(219, 230, 255, 0.4);
}

.status-tips{
  padding: 40rpx 0;
  padding-bottom: calc((env(safe-area-inset-bottom) / 2) + 40rpx);
  display: flex;
  justify-content: center;
  align-items: center;
}
.status-tips .text{
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #CCC8C4;
  margin: 0 16rpx;
}
.status-tips .line{
  width: 48rpx;
  height: 2rpx;
  background: #CCC8C4;
}