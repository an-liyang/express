/* pages/boundCar/index.wxss */
.bound-car{
  width: 100%;
  /* height: 100vh; */
  height: calc(100vh - env(safe-area-inset-bottom));
  background: #F7F7F9;
  padding: 24rpx 24rpx 0;
  box-sizing: border-box;
  position: relative;
}
.bound-car .bound-car-box{
  width: 702rpx;
  /* height: 448rpx; */
  background: #FFFFFF;
  box-shadow: 0 8rpx 24rpx 0 rgba(41, 37, 34, 0.02);
  border-radius: 8rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.form-item{
  height: 80rpx;
  padding-top: 32rpx;
  /* box-sizing: border-box; */
  font-size: 28rpx;
  color: #292522;
  border-bottom: 2rpx solid #F5F3F2;
  position: relative;
}
.form-item-van-border{
  border-bottom: 2rpx solid #F5F3F2;
}
.form-item .input-class-model{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #292522 !important;
}
.form-item-van .label-class-vin{
  color: #292522;
}
.form-item-van .input-class-vin{
  width: 470rpx;
  /* 273-235差值 */
  margin-left: 66rpx;
}
.form-item:last-child{
  border: none;
}
.form-item .label{
  width: 114rpx;
  height: 48rpx;
  line-height: 48rpx;
}
.form-item .right{
  position: absolute;
  top: 36rpx;
  right: 0;
  width: 470rpx;
  height: 40rpx;
  min-height: 40rpx;
  line-height: 40rpx;
  text-align: right;
}

.item-select-car{
  position: relative;
}
.item-select-car .right{
  margin-right: 32rpx;
}
.item-select-car .select-car-icon{
  position: absolute;
  top: 48rpx;
  right: 0;
  width: 16rpx;
  height: 24rpx;
}
.item-licence .licence{
  position: absolute;
  top: 36rpx;
  right: 0;
  width: 180rpx;
  height: 40rpx;
  min-height: 40rpx;
  line-height: 40rpx;
  text-align: right;
  color: #292522;
}
/* 光标样式 */
.item-licence .cursor-pic{
  position: absolute;
  margin: auto;
  top: 0;
  bottom: 0;
  right: 0;
  height: 37rpx;
  width: 4rpx;
}
.item-licence .licence .van-field__control--disabled {
  color: #292522;
}
.item-licence .province{
  position: absolute;
  top: 38rpx;
  right: 196rpx;
}
.item-licence .province .download-icon{
  width: 24rpx;
  height: 16rpx;
}
.item-switch .switch{
  position: absolute;
  top: 32rpx;
  right: 0;
}

/* 必填项样式 */
.required .label::before{
  content: '*';
  color: #FF4400;
}
/* 保存 */
.footer-btn{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  /* height: 112rpx; */
  /* padding: 14rpx 24rpx 16rpx */
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
  border-top: 2rpx solid #F5F3F2;
  background: #FFFFFF;
  box-shadow: 0 -4rpx 16rpx 0 rgba(41, 37, 34, 0.02);
  /* box-sizing: border-box; */
}
.footer-btn .btn{
  margin: 14rpx 24rpx 16rpx;
  width: 702rpx;
  height: 80rpx;
  background: #FF800B;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Bold, PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 80rpx;
  text-align: center;
}
.footer-btn .null{
  background: #EBECF0;
  color: #A3A09D;
}
/* switch样式修改 */
.van-switch{
  width: 76rpx !important;
  height: 44rpx !important;
  border: 2rpx solid #E5E5E5 !important;
}
.van-switch .van-switch__node{
  width: 44rpx;
  height: 44rpx;
  box-shadow: 0 6rpx 8rpx 0 rgba(0, 0, 0, 0.15), 
  0 0 2rpx 0 rgba(0, 0, 0, 0.05), 
  -2rpx 4rpx 4rpx 0 rgba(0, 0, 0, 0.1), 
  0 4rpx 24rpx 0 rgba(0, 0, 0, 0.08), 
  0 0 4rpx 0 rgba(0, 0, 0, 0.2);
  left: 0;
  top: 0;
}
.van-switch--on {
  width: 80rpx !important;
  height: 48rpx !important;
  border: none !important;
}
.van-switch--on .van-switch__node{
  width: 44rpx !important;
  height: 44rpx !important;
  box-shadow: 0px 3px 4px 0px rgba(0, 0, 0, 0.15), 
  0px 0px 1px 0px rgba(0, 0, 0, 0.05),
  -1px 2px 2px 0px rgba(0, 0, 0, 0.1), 
  0px 2px 12px 0px rgba(0, 0, 0, 0.08), 
  0px 0px 2px 0px rgba(0, 0, 0, 0.2);
  left: -6rpx;
  top: 2rpx;
}