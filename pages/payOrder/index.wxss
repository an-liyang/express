/* pages/payOrder/index.wxss */
.pay-order{
  width:100%;
  /* height:100vh; */
  padding:24rpx 24rpx 136rpx 24rpx;
  padding-bottom: calc((env(safe-area-inset-bottom) / 2) + 136rpx);
  background: #F7F7F9;
  box-sizing: border-box;
  position: relative;
}
.footer-btn-box{
  width:100%;
  position: fixed;
  bottom:0rpx;
  left:0rpx;
  /* width:100%; */
  /* height:112rpx; */
  padding:16rpx 24rpx;
  padding-bottom: calc((env(safe-area-inset-bottom) / 2) + 16rpx);
  /* line-height: 112rpx; */
  box-sizing: border-box;
  background: #FFFFFF;
  box-shadow: 0rpx -4rpx 16rpx 0rpx rgba(41, 37, 34, 0.02);
  display:flex;
  align-items:center;
  justify-content: space-between;
  }
  .footer-price{
    width:calc(100%-186rpx);
    height: 100%;
    display:inline-block;
    text-align:left;
    display:flex;
    align-items:center;
  }
  .un-active{
    background: #EBECF0 !important;
    color: #A3A09D !important;
    border: 2rpx solid #EBECF0 !important;
  }
  .active-footer-price{
    color: #F5222D;
  }
  .footer-btn{
    display:inline-block;
    width:186rpx;
    height:80rpx;
    background: #EBECF0;
    border-radius: 44rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Bold, PingFang SC;
    font-weight: bold;
    color: #A3A09D;
    text-align:center;
    line-height: 80rpx;
  }
  .active-footer-btn{
    background: #FF8833;
    border-radius: 44rpx;
    color: #FFFFFF;
    box-sizing: border-box;
    border: 2rpx solid #FF8833;
  }

  /* 现价 */
.current-price{
  height: 42rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
  color: #F5222D;
}
/* 单位 */
.current-price .price-unit{
  font-size: 24rpx;
}
/* 整数 */
.current-price .price-int{
  font-size: 36rpx;
  line-height: 42rpx;
}
/* 小数 */
.current-price .price-float{
  font-size: 24rpx;
}
.coupon-confirm{
  width:100%;
  padding:0rpx 24rpx;
  padding-top:16rpx;
  height:112rpx;
  box-sizing: border-box;
  position: fixed;
  left:0rpx;
  bottom:calc(constant(safe-area-inset-bottom)/2);
  bottom:calc(env(safe-area-inset-bottom)/2);
  z-index:999;
  background:#fff;
}
.coupon-confirm-btn{
  width:100%;
  height: 80rpx;
  background: #FF8833;
  display:flex;
  justify-content: center;
  align-items:center;
  font-size: 28rpx;
  font-family: PingFangSC-Bold, PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  border-radius: 8rpx;
}
.no-data{
  width:100%;
  height:80vh;
  display: flex;
  align-items:center;
  justify-content: center;
  flex-direction: column;
}
.no-data-img{
  width:228rpx;
  height:228rpx;
  margin-bottom:18rpx;
}
.no-data-desc{
  text-align:center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #292522;
  line-height: 40rpx;
  margin-bottom:34rpx;
}
.no-data-btn{
  width: 208rpx;
  height: 80rpx;
  box-shadow: 0rpx 8rpx 24rpx 0rpx rgba(219, 230, 255, 0.4);
  border-radius: 40rpx;
  border: 2rpx solid #FF8833;
  font-size: 28rpx;
  font-family: PingFangSC-Bold, PingFang SC;
  font-weight: bold;
  color: #FF8833;
  /* line-height: 24rpx; */
  text-shadow: 0rpx 8rpx 24rpx rgba(219, 230, 255, 0.4);
  display:flex;
  justify-content: center;
  align-items:center;
}
.con-box{
  padding-bottom:88rpx;
}