/* components/loading/index.wxss */
.loading-box{
  width:100%;
  position:fixed;
  left:50%;
  top:50%;
  transform:translate(-50%,-50%);
  /* min-height: 60vh; */
  display:flex;
  flex-direction: column;
  align-items:center;
  justify-content: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #292522;
  line-height: 40rpx;
  text-shadow: 0rpx 8rpx 24rpx rgba(219, 230, 255, 0.4);
  z-index:88;
}
.loading-img{
  width:72rpx;
  height:72rpx;
  margin-bottom:36rpx;
}
.loading-inner-box{
  display:flex;
  flex-direction: column;
  align-items:center;
  justify-content: center;
  width: 216rpx;
  height: 232rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 0rpx 16rpx 0rpx rgba(41, 37, 34, 0.04);
  border-radius: 16rpx;
}