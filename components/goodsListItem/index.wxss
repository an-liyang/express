/* component/index.wxss */
.list-item{
  min-height: 252rpx;
  margin-top: 24rpx;
  box-sizing: border-box;
  display: flex;
  position: relative;
  font-family: PingFangSC-Regular, PingFang SC;
}
.item-left{
  flex: 0 0 268rpx;
  position: relative;
}
.item-left .img{
  width: 252rpx !important;
  height: 252rpx !important;
  background: #F4F6F9;
  border-radius: 16rpx;
}
/* 无忧 */
.item-left .item-carefree-tips{
  position: absolute;
  top: 0;
  left: 0;
  width: 126rpx;
  height: 40rpx;
}
/* 无排期和无货 */
.item-left .no-schedule,
.item-left .no-goods{
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 160rpx;
  height: 160rpx;
  background: rgba(43, 45, 51, 0.5);
  border-radius: 80rpx;
  padding-top: 32rpx;
  box-sizing: border-box;
}
.item-left .text{
  width: 96rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 32rpx;
  font-family: MicrosoftYaHei;
  color: #FFFFFF;
  line-height: 48rpx;
}
.item-left .no-goods .text{
  margin-top: 24rpx;
}

.item-right{
  flex: 1;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-bottom: 6rpx;
}
/* 省略号 */
.item-right .ellipsis{
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.item-right .title{
  font-size: 28rpx;
  font-weight: bold;
  color: #292522;
  line-height: 44rpx;
  margin-bottom: 4rpx;
}
.item-right .desc{
  font-size: 20rpx;
  color: #A3A09D;
  line-height: 28rpx;
  margin-bottom: 8rpx;
}
/* 标签 */
.item-right .type-tag{
  width: 96rpx;
  height: 32rpx;
  background: #FFECE5;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.item-right .type-tag .text{
  width: 80rpx;
  height: 24rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FF800B;
  line-height: 24rpx;
}
/* 优惠券标签 */
.item-right .coupon-tag{
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
.item-right .coupon-tag .text{
  height: 24rpx;
  border-radius: 4rpx;
  border: 1rpx solid #F5222D;
  padding: 0 4rpx;
  box-sizing: border-box;
  font-size: 16rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #F5222D;
  line-height: 24rpx;
  margin-right: 8rpx;
  /* box-shadow: -0.2px -0.2px 0px 0.5px #F5222D inset; */
}
/* 现价 */
.item-right .price .current-price{
  height: 42rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
  color: #F5222D;
}
/* 单位 */
.item-right .current-price .price-unit{
  font-size: 24rpx;
}
/* 整数 */
.item-right .current-price .price-int{
  font-size: 36rpx;
  line-height: 42rpx;
}
/* 小数 */
.item-right .current-price .price-float{
  font-size: 24rpx;
}
/* 范围 */
.item-right .current-price .price-range{
  margin-left: 4rpx;
  font-size: 20rpx;
  font-weight: 400;
}
/* 原价 */
.item-right .price .original-price{
  font-size: 20rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  line-height: 28rpx;
  color: #A3A09D;
  text-decoration: line-through;
}
.item-right .num-sold{
  position: absolute;
  right: 0;
  bottom: 6rpx;
  color: #A3A09D;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  height: 28rpx;
  line-height: 28rpx;
}