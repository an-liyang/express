/* pages/orderDetail/components/comCarInfo/index.wxss */
.car-info{
  width:100%;
  margin-top:24rpx;
  padding:32rpx 24rpx 24rpx 24rpx;
  /* height: 504rpx; */
  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 24rpx 0rpx rgba(41, 37, 34, 0.02);
  border-radius: 8rpx;
  box-sizing: border-box;
}
.set-center{
  height: 32rpx;
  display:flex;
  justify-content: flex-start;
  align-items:center;
  box-sizing: border-box;
}
.car-info-top{
  width:100%;
  display:flex;
  justify-content: space-between;
  align-items:center;
}
.car-info-top-img{
border-radius: 8rpx;
flex: 0 0 144rpx;
height:144rpx;
background-color:#eee;
margin-right:16rpx;
display:inline-block;
}
.car-info-top-desc{
  overflow: hidden;
  /* width:calc(100%-192rpx); */
  flex:1;
  min-height: 144rpx;
  padding-top:8rpx;
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
}
.car-desc-title{
  width:100%;
  font-size: 28rpx;
  font-family: 'PingFangSC-Bold, PingFang SC';
  font-weight: bold;
  color: #292522;
  line-height: 44rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  -ms-text-overflow: ellipsis;
  text-overflow: ellipsis;
  word-wrap:break-word;
  /* margin-bottom:10rpx; */
}
.car-desc-box{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A3A09D;
  /* line-height: 34rpx; */
  display:flex;
  justify-content: flex-start;
  align-items:center;
  margin-bottom:14rpx;
}
.car-desc-one{
  margin-right:26rpx;
}
.car-price{
  font-size: 24rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
  color: #292522;
}
.car-price-orange{
  color:#FF8833;
  font-weight: 400;
  font-weight: normal;
}
.car-info-mid{
width:100%;
padding-top:34rpx;
box-sizing: border-box;
}
.car-info-item{
width:100%;
display:flex;
justify-content: space-between;
align-items:center;
font-size: 24rpx;
font-family: PingFangSC-Regular, PingFang SC;
font-weight: 400;
color: #292522;
line-height: 34rpx;
margin-bottom:22rpx;
}
.car-info-item-key{
text-align:left;
}
.car-info-item-val{
  text-align:left;
}
.car-info-footer{
  height:80rpx;
  width:100%;
  border-top:2rpx solid #F5F3F2;
  display:flex;
  justify-content: flex-end;
  font-size: 24rpx;
  font-family: 'PingFangSC-Bold, PingFang SC';
  font-weight: bold;
  color: #292522;
  box-sizing: border-box;
}
.car-info-footer-orange{
  width:100%;
  margin-top:32rpx;
  /* height: 64rpx; */
  padding:16rpx 24rpx;
  background: rgba(255, 68, 0, 0.1);
  border-radius: 8rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FF4400;
  display:flex;
  justify-content: flex-start;
  align-items:center;
  box-sizing: border-box;
}
.mb24{
  width:100%;
  height:24rpx;
  background:#fff;
}
.footer-price{
  /* width:100%; */
  height:100%;
  font-size: 24rpx;
  font-family: 'PingFangSC-Bold, PingFang SC';
  font-weight: bold;
  color: #292522;
  line-height: 80rpx;
  /* display:flex;
  justify-content: flex-end;
  align-items: center;
  text-align:right; */
}
.price-num{
  /* width:100%; */
  height:100%;
  font-size: 36rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
  color: #F5222D;
  line-height: 80rpx;
  /* display:flex;
  justify-content: flex-end;
  align-items: center;
  text-align:left; */
}
/* 现价 */
.current-price{
  display: inline-block;
  margin-top: 20rpx;
  margin-left: 8rpx;
  line-height: 42rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
  color: #F5222D;
}
/* 单位 */
.current-price .price-unit{
  font-size: 24rpx;
}
/* 整数 */
.current-price .price-int{
  font-size: 36rpx;
  line-height: 42rpx;
}
/* 小数 */
.current-price .price-float{
  font-size: 24rpx;
}
.coupon-label{
  display:inline-block;
  margin-left:8rpx;
  padding:0rpx 8rpx;
  /* height: 24rpx; 
  line-height: 24rpx; */
  border-radius: 4rpx;
  border: 1rpx solid #F5222D;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #F5222D;
  box-sizing: border-box;
  text-align: center;
}
.coupon-active{
  font-size: 24rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
  color: #F5222D;
}
.coupon-arrow{
  display:inline-block;
  margin-left:16rpx;
  width:16rpx;
  height:24rpx;
}